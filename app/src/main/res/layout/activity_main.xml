<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_x="@dimen/activity_horizontal_margin"
    android:layout_y="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@color/colorFondo">

    <LinearLayout
        android:id="@+id/llmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/miActionBar"
            layout="@layout/actionbar"
            ></include>

        <TextView
            android:id="@+id/tvTituloFavoritos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista de Mascotas"
            android:textSize="@dimen/card_titulo"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMascotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/miActionBar">
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/sfiMiIndicadorRefresh"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ListView android:id="@+id/lstMilista"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                </ListView>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </RelativeLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llmain"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@android:color/transparent"
        app:barrierAllowsGoneWidgets="false"
        app:barrierDirection="bottom"
        app:layout_editor_absoluteX="@android:dimen/app_icon_size"
        app:layout_editor_absoluteY="@android:dimen/app_icon_size"
        app:rippleColor="@android:color/transparent"
        app:srcCompat="@drawable/icons8_star_48"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>